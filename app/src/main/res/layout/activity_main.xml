<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.laptophome.project.MainActivity"
    android:background="#080606">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_alignWithParentIfMissing="false">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:id="@+id/GridButtons">
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/bt0"
                android:layout_row="0"
                android:layout_column="0"
                android:background="#23d8c0" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/bt1"
                android:layout_row="0"
                android:layout_column="1"
                android:background="#23d8c0" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/bt2"
                android:layout_row="0"
                android:layout_column="2"
                android:background="#23d8c0" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/bt3"
                android:layout_row="1"
                android:layout_column="0"
                android:background="#23d8c0" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/bt4"
                android:layout_row="1"
                android:layout_column="1"
                android:background="#23d8c0" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/bt5"
                android:layout_row="1"
                android:layout_column="2"
                android:background="#23d8c0" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/bt6"
                android:layout_row="2"
                android:layout_column="0"
                android:background="#23d8c0" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/bt7"
                android:layout_row="2"
                android:layout_column="1"
                android:background="#23d8c0" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/bt8"
                android:layout_row="2"
                android:layout_column="2"
                android:background="#23d8c0" />
        </GridLayout>

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sound match"
        android:id="@+id/sound_btn"
        android:layout_alignParentBottom="true"
        android:onClick="sncount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#080606"
        android:textColor="#fcfcfc"
        android:shadowColor="#a14c4c" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="square match"
        android:id="@+id/square_btn"
        android:onClick="sqcount"
        android:layout_alignTop="@+id/sound_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#080606"
        android:textColor="#fcfcfc"
        android:shadowColor="#a14c4c" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/start_btn"
        android:onClick="ran"
        android:background="#080606"
        android:textColor="#fcfcfc"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:shadowColor="#a14c4c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:background="#080606"
        android:textColor="#fcfcfc"
        android:textSize="20dp" />

</RelativeLayout>
